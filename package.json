{
  "name": "@nestjs/graphql",
  "version": "6.5.3",
  "description": "Nest - modern, fast, powerful node.js web framework (@graphql)",
  "author": "Kamil Mysliwiec",
  "license": "MIT",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "tsc -p tsconfig.json",
    "format": "prettier **/**/*.ts --ignore-path ./.prettierignore --write",
    "prepublish:npm": "npm run build",
    "publish:npm": "npm publish --access public",
    "prepublish:next": "npm run build",
    "publish:next": "npm publish --access public --tag next",
    "test:integration": "jest --config ./tests/jest-e2e.json"
  },
  "devDependencies": {
    "@nestjs/common": "6.10.1",
    "@nestjs/core": "6.10.1",
    "@nestjs/platform-express": "6.10.1",
    "@nestjs/platform-fastify": "6.10.1",
    "@nestjs/testing": "6.10.1",
    "@types/graphql": "14.2.3",
    "@types/jest": "24.0.23",
    "@types/node": "12.12.14",
    "@types/normalize-path": "3.0.0",
    "apollo-server-express": "2.9.12",
    "apollo-server-fastify": "2.9.12",
    "class-transformer": "0.2.3",
    "graphql": "14.5.8",
    "husky": "3.1.0",
    "jest": "24.9.0",
    "lint-staged": "9.4.3",
    "prettier": "1.19.1",
    "reflect-metadata": "0.1.13",
    "supertest": "4.0.2",
    "ts-jest": "24.2.0",
    "ts-node": "8.5.2",
    "typescript": "3.7.2"
  },
  "dependencies": {
    "@types/graphql": "14.2.3",
    "chokidar": "3.3.0",
    "fast-glob": "3.1.0",
    "graphql-tools": "4.0.6",
    "lodash": "4.17.15",
    "merge-graphql-schemas": "1.7.3",
    "normalize-path": "3.0.0",
    "ts-morph": "5.0.0",
    "uuid": "3.3.3"
  },
  "peerDependencies": {
    "@nestjs/core": "^6.4.0",
    "graphql": "^14.1.1",
    "reflect-metadata": "^0.1.12"
  },
  "optionalDependencies": {
    "type-graphql": "^0.17.3"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --ignore-path ./.prettierignore --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
